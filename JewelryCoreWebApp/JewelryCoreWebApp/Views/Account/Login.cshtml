@model JewelryCoreWebApp.Models.AccountModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <script asp-src-include="~/js/Account.js"></script>

    <title>Login</title>
    <style type="text/css">
        .bs-example {
            height: 220px;
        }

        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .error {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }
       
        .loginbtn {
            padding-left: 500px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("MyLogin", "Account", FormMethod.Post))
    {
    <div class="bs-example" style="background-color: #808080;border:2px solid gray;">

        <div class="form-group centerlook">
        </div>
        <div class="form-group centerlook">
            <label>UserName</label>
            @Html.TextBoxFor(m => m.UserName,
                                         new
                                         {
                                             @id = "uname"
                                         })
            @Html.ValidationMessageFor(model => model.UserName)
        </div>
        <div class="form-group centerlook">
            <label>Password</label>
            @Html.PasswordFor(m => m.UserPassword,
                                        new
                                        {
                                            @id = "pwd"
                                        })
            @Html.ValidationMessageFor(model => model.UserPassword)

        </div>

        <div class="loginbtn">

            <input type="submit" value="Login" id="login" class="btn btn-primary" />
            <input type="submit" id="cancel" value="Cancel" class="btn btn-primary" />

        </div>
        <div id="popupdiv" style="color:red">

            <label>@ViewBag.ErrorMsg</label>
        </div>

    </div>
    }
